# =============================================================================================
# ZSH prestart
# =============================================================================================

# cmd line prompt
function precmd {
  if [[ $USER == "nmurthy" ]]; then
    PS1="%{$fg[cyan]%}%n%{$fg[default]%}:%1~%# "
  else 
    PS1="%{$fg[cyan]%}%n@%{$fg[default]%}%m:%1~%# "
  fi
}

# =============================================================================================
# Helper functions
# =============================================================================================
f() {
  vim $(fzf)
}

fd() {
  # includes hidden directories
  local dir
  dir=$(find ${1:-.} -type d 2> /dev/null | fzf +m) && cd "$dir"
}

gospace() {
  cd $GOPATH/src
  pwd
}


